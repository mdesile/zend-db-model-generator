    {
        $data = array(
        	<?php foreach ($columnsWithoutPrimaryKeys as $column): ?>
            '<?= $column?>' => $<?=$this->_tbname?>-><?= $column?>,
            <?php endforeach; ?>
        );

        $id = (int)$<?=$this->_tbname?>->id;
        if ($id == 0) {
